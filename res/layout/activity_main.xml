<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" 
    tools:context="com.su.poke.MainActivity" >
    
      <ImageButton
        android:id="@+id/button_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_set"
        android:layout_alignParentRight="true"
        android:layout_marginRight="130dp"
        android:background="@drawable/button_new"
        android:tag="button_new" />

    <ImageButton
        android:id="@+id/button_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_new"
        android:layout_centerVertical="true"
        android:background="@drawable/button_set"
        android:tag="button_set" />

    <ImageButton
        android:id="@+id/button_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_set"
        android:layout_below="@+id/button_set"
        android:background="@drawable/button_help"
        android:tag="button_help" />

    <ImageButton
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_help"
        android:layout_below="@+id/button_help"
        android:background="@drawable/button_exit"
        android:tag="button_exit" />

    <com.su.poke.GameSetView
        android:id="@+id/dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:layout_centerHorizontal="true"         
        android:visibility="gone" />
    <com.su.poke.GameHelpView
        android:id="@+id/dialog_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" 
        android:layout_centerHorizontal="true"         
        android:visibility="gone" />

  

</RelativeLayout>
