<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"    
    android:layout_height="277dp"
    android:background="@drawable/set_board" >

    <ImageView
        android:id="@+id/background_audio"
        android:tag="background_audio"
        android:contentDescription="on"      
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/audio"
        android:layout_alignRight="@+id/audio"
        android:src="@drawable/on" />

    <ImageButton
        android:id="@+id/button_back"
        android:tag="button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="53dp"
        android:background="@drawable/button" />

    <ImageView
        android:id="@+id/audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="100dp"        
        android:contentDescription="on"
        android:src="@drawable/on"
        android:tag="audio" />

    <ImageButton
        android:id="@+id/button_keep"
        android:tag="button_keep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="128dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/button_keep"
        android:visibility="gone"/>

</RelativeLayout>